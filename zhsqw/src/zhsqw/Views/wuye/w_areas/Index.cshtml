@model IEnumerable<w_areas>

@{
    Layout = "_wuye";
    ViewData["Title"] = "社区管理";
}

<table cellpadding="0" cellspacing="0" width="700">
    <tr>
        <td style="width:15%" class="qtitle">社区名称：</td>
        <td style="width:50%" class="qcontent">
            @Html.TextBox("areaname")
        </td>
        <td style="width:35%" class="qbuttons">
            <a asp-action="Index" class="easyui-linkbutton" data-options="iconCls:'icon-search',plain:true">查询</a> |
            <a asp-action="Create" class="easyui-linkbutton" data-options="iconCls:'icon-add',plain:true">添加社区</a>
        </td>
    </tr>
</table>
<table cellpadding="0" cellspacing="0" width="700">
    <tr>
        <th width="200">社区名称</th>
        <th width="350">详细地址</th>
        <th width="150">操作</th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AreaName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Addr)
        </td>
        <td style="text-align:center">
            <a asp-action="Edit" asp-route-id="@item.ID" class="easyui-linkbutton" data-options="iconCls:'icon-edit',plain:true">编辑</a> |
            <a asp-action="Delete" asp-route-id="@item.ID" class="easyui-linkbutton" data-options="iconCls:'icon-remove',plain:true" onclick="return confirm('您确定删除吗？')">删除</a>
        </td>
    </tr>
}
</table>
