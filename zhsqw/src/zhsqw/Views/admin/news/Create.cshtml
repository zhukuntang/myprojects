@model zhsqw.Models.news

@{
    Layout = "_wuye";
    ViewData["Title"] = "添加信息";
}

<form asp-action="Create">
    <div style="border-bottom:1px solid #ffcccc;width:700px;height:25px;font-size:15px;font-weight:bold;text-align:center;margin:10px auto">添加信息</div>
    <table cellpadding="0" cellspacing="0" style="width:700px">
        <tr>
            <td style="width:140px" class="qtitle">信息类别：</td>
            <td style="width:560px" class="qcontent">
                <input asp-for="NewsClass" style="width:200px" />
            </td>
        </tr>
        <tr>
            <td class="qtitle">信息标题：</td>
            <td class="qcontent">
                <input asp-for="NewsTitle" style="width:500px" />
            </td>
        </tr>
        <tr>
            <td class="qtitle" colspan="2">信息内容：</td>
        </tr>
        <tr>
            <td class="qcontent" colspan="2">
                <textarea asp-for="NewsContent" style="width:694px"></textarea>
            </td>
        </tr>
        <tr>
            <td style="text-align:center" colspan="2">
                <a onclick="$('form').submit();$(this).parent().text('正在提交...')" class="easyui-linkbutton" data-options="iconCls:'icon-ok'">提交</a>
                <a asp-action="Index" class="easyui-linkbutton" data-options="iconCls:'icon-redo'">返回列表</a>
            </td>
        </tr>
    </table>
</form>
@section scripts{
    <script type="text/javascript" charset="utf-8" src="/ueditor/ueditor.config.js"></script>
    <script type="text/javascript" charset="utf-8" src="/ueditor/ueditor.all.js"></script>
    <script type="text/javascript">
        UE.getEditor("NewsContent");
    </script>
}